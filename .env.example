# AI Provider Configuration
AI_PROVIDER=GEMINI
EMBEDDING_PROVIDER=HUGGINGFACE

## AI Model Configuration. Not strictly necessary. If configured using the UI, these will be overridden.
GEMINI_TEXT_GENERATION_MODEL=gemini-2.5-flash
GEMINI_TEXT_GENERATION_LITE_MODEL=gemini-2.0-flash-lite
GEMINI_AGENT_MODEL=gemini-2.5-flash

## Embedding Models
GEMINI_EMBEDDING_MODEL=gemini-embedding-exp-03-07 # Not required if using HUGGINGFACE embeddings
HUGGINGFACE_EMBEDDING_MODEL=intfloat/multilingual-e5-base # Not required if using GEMINI embeddings
EMBEDDINGS_DIMS=768 # Important: Ensure this matches the embedding model dimensions (768 for intfloat/multilingual-e5-base, 1536 for gemini-embedding-exp-03-07)

## Currently only google is supported
GOOGLE_AI_API_KEY=yourapikey
# GOOGLE_AI_BASE_URL=https://your-google-ai-base-url # Optional: Custom base URL for Google AI API

## Which database to use. 'sqlite' or 'postgres'
USE_DB=sqlite

## PostgreSQL Database credentials. Not needed if you are using sqlite. 
## The defaults will work if you are using the provided Docker setup.
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=hathi-db-123!
# POSTGRES_DATABASE=postgres
# POSTGRES_URL=postgresql://postgres:hathi-db-123!@localhost:5432/postgres

## Logging Preference
LOG_PERF_TO_CSV=false # Log performance metrics to CSV
LOG_CHAT_TO_CSV=false # Log chat messages to CSV
LOG_CHAT_TO_SERVER=false # Log chat messages to server
NEXT_PUBLIC_LOG_CHAT_TO_CONSOLE=false # Log chat messages to console
NEXT_PUBLIC_DISPLAY_TOOL_INFO=false # Display tool information in the UI

# Agent API (required to enable /api/v1/* endpoints)
# HATHI_API_KEY=your-secret-key-here
